<%= form_for(@blog) do |form| %>
<p>
  <%= form.label :title %><br />
  <%= form.text_field :title %>
</p>
<p>
  <%= form.label :description %><br />
  <%= form.text_area :description %>
</p>
<p>
  <%= form.label :postedby %><br />
  <%= form.text_field :postedby %>
</p>
<p>
  <%= form.submit%>
</p>
<% end%>